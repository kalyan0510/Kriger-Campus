<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.androditry.CategoryNav"
    android:weightSum="1">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/q1"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textColor="#121211"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:text="What is Kriger Campus?" />

            <TextView
                android:id="@+id/a1"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textColor="#121211"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:text="The best app to connect with undergarduate college students. Anyone with an email ID can ask any question." />


            <TextView
                android:id="@+id/q2"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"
                android:shadowColor="#000000"
                android:textColor="#121211"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:layout_height="wrap_content"
                android:text="Which all colleges can I enquire about ?" />

            <TextView
                android:id="@+id/a2"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"
                android:shadowColor="#000000"
                android:textColor="#121211"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:layout_height="wrap_content"
                android:text="Right now only IPM IIM Indore. Our team is working hard to add other colleges to the app." />

            <TextView
                android:id="@+id/q3"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textColor="#121211"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:text="Who answers the questions ?" />

            <TextView
                android:id="@+id/a3"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textColor="#121211"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:text="The questions are answered only by the current bona fide students of the course." />
            <TextView
                android:id="@+id/q4"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textColor="#121211"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"
                android:shadowColor="#000000"
                android:layout_marginBottom="10dp"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:text="Who all can use this app ?" />

            <TextView
                android:id="@+id/a4"
                android:layout_width="fill_parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textColor="#121211"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:shadowRadius="5"

                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="5"
                android:background="@drawable/btn_border"
                android:text="Aspirants , Parents , Other college students to explore the course campus and lifestyle!" />




        </LinearLayout>





</ScrollView>
